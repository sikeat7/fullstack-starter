{
  "name": "@repo/i18n",
  "version": "0.0.1",
  "description": "Shared internationalization utilities and translations",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -b",
    "clean": "rm -rf dist tsconfig.tsbuildinfo"
  },
  "devDependencies": {
    "@repo/typescript": "workspace:*",
    "typescript": "^5.7.3"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./locales": {
      "types": "./dist/locales/index.d.ts",
      "import": "./dist/locales/index.js",
      "require": "./dist/locales/index.js"
    },
    "./locales/en.json": "./src/locales/en.json",
    "./locales/es.json": "./src/locales/es.json"
  }
}
