# ===========================================
# Database Configuration
# ===========================================
DATABASE_URL="postgresql://admin:admin@localhost:5432/myapp_db?schema=public"
POSTGRES_USER=admin
POSTGRES_PASSWORD=admin
POSTGRES_DB=myapp_db
DB_PORT=5432

# ===========================================
# Application Configuration
# ===========================================
NODE_ENV=development
PORT=3000
APP_PORT=3000
API_PREFIX=api/v1

# ===========================================
# Redis Configuration
# ===========================================
