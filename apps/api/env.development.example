# ===========================================
# Configuración de Base de Datos
# ===========================================
DATABASE_URL="postgresql://admin:admin@localhost:5432/b2b_db?schema=public"
POSTGRES_USER=admin
POSTGRES_PASSWORD=admin
POSTGRES_DB=b2b_db
DB_PORT=5432

# ===========================================
# Configuración de la Aplicación
# ===========================================
NODE_ENV=development
PORT=3000
APP_PORT=3000
API_PREFIX=api/v1

# ===========================================
# Configuración de Redis
# ===========================================
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password-change-in-production

# ===========================================
# Configuración de Seguridad
# ===========================================
JWT_SECRET=dev-secret-key-change-in-production
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# ===========================================
# Configuración de Logging
# ===========================================
LOG_LEVEL=debug

# ===========================================
# Configuración de CORS
# ===========================================
CORS_ORIGIN=http://localhost:3001
CLIENT_URL=http://localhost:3001

# ===========================================
# Configuración de Rate Limiting
# ===========================================
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# ===========================================
# Configuración de Swagger
# ===========================================
SWAGGER_TITLE=B2B API - Development
SWAGGER_DESCRIPTION=Sistema SaaS B2B para comerciantes y proveedores
SWAGGER_VERSION=1.0.0
