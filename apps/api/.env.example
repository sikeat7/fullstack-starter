# ===========================================
# Database Configuration
# ===========================================
DATABASE_URL="postgresql://admin:admin@localhost:5432/myapp_db?schema=public"
POSTGRES_USER=admin
POSTGRES_PASSWORD=admin
POSTGRES_DB=myapp_db
DB_PORT=5432

# ===========================================
# Application Configuration
# ===========================================
NODE_ENV=development
PORT=3000
APP_PORT=3000
API_PREFIX=api/v1

# ===========================================
# Redis Configuration (Optional)
# ===========================================
REDIS_URL=redis://localhost:6379
REDIS_PORT=6379
REDIS_PASSWORD=

# ===========================================
# Security Configuration
# ===========================================
# IMPORTANT: Change these values in production!
# Generate a secure JWT_SECRET with: openssl rand -base64 64
JWT_SECRET=change-this-to-a-secure-random-string-min-32-chars
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# ===========================================
# Logging Configuration
# ===========================================
LOG_LEVEL=info

# ===========================================
# CORS Configuration
# ===========================================
CORS_ORIGIN=http://localhost:3001
CLIENT_URL=http://localhost:3001

# ===========================================
# Rate Limiting Configuration
# ===========================================
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# ===========================================
# Swagger Configuration
# ===========================================
SWAGGER_TITLE=API Documentation
SWAGGER_DESCRIPTION=Fullstack TypeScript API
SWAGGER_VERSION=1.0.0
