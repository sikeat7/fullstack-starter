# ===========================================
# Configuración de la Aplicación
# ===========================================
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1

# ===========================================
# Configuración de Base de Datos
# ===========================================
# DATABASE_URL="postgresql://admin:admin@db:5432/b2b_db?schema=public"
DATABASE_URL="postgresql://admin:admin@localhost:5432/b2b_db?schema=public"
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=b2b_db
DB_PORT=5432


REDIS_URL="redis://localhost:6379"

# ===========================================
# Configuración de Seguridad
# ===========================================
JWT_SECRET=dev-secret-key-change-in-production
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# ===========================================
# Configuración de Logging
# ===========================================
LOG_LEVEL=debug

# ===========================================
# Configuración de CORS
# ===========================================
CORS_ORIGIN=http://localhost:3000

# ===========================================
# Configuración de Swagger
# ===========================================
SWAGGER_TITLE=B2B API - Development
SWAGGER_DESCRIPTION=Sistema SaaS B2B para comerciantes y proveedores
SWAGGER_VERSION=1.0.0
